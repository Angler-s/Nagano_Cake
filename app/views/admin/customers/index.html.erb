<div class="row d-inline">
  <div class="offset-2 pl-3">
    <h5 class="bg-light col-2 text-center px-0">会員一覧</h5>
  </div>
  <div class="col-md-8 mx-auto">
    <table class="table table-hover border-bottom">
      <thead class="bg-light table-sm text-center">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr class="text-center">
            <td class="align-middle"><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.full_name %>
              <% end %>
            </td>
            <td class="align-middle"><%= customer.email %></td>
            <td class="align-middle">
              <% if customer.is_deleted == false %>
                <p class="text-success font-weight-bold align-middle mb-0">有効</p>
              <% else %>
                <p class="text-secondary font-weight-bold align-middle mb-0">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="mx-auto mb-5">
        <%= paginate @customers, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>