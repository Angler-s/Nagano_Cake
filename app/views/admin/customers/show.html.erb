<h2><%= @customer.full_name %>さんの会員詳細</h2>
<table class="table table-borderless mt-3 mb-5">
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
    <td></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %>  <%=@customer.first_name %></td>
    <td></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana %>  <%=@customer.first_name_kana %></td>
    <td></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
    <td></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
    <td></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
    <td></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
    <td></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <% if @customer.is_deleted == false %>
        <p class="text-success font-weight-bold">有効</p>
      <% else %>
        <p class="text-secondary font-weight-bold"></p>退会</p>
      <% end %>
    </td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success btn-md" %></td>
    <td><%= link_to "注文履歴一覧を見る", order_index_admin_customer_path(@customer.id), class: "btn btn-primary btn-md" %></td>
  </tr>
</table>