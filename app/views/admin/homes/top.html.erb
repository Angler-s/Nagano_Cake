<div class="container">
  <h3>注文履歴一覧</h3>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |customer| %>
      <tbody>
        <tr>
            <!--購入日時-->
          <td><%= link_to l order.created_at, admin_order_path(order) %></td>
            <!--購入者名-->
             <!--customer.name = #{first_name} + #{last_name} となるようにCustomerモデルに記載する-->
          <td><%= order.customer.name %></td>
            <!--注文個数-->
          <td><%= order_items.sum(:count) %></td>
            <!--注文ステータス-->
          <td><%= order.status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>