<div class="mt-5 justify-content-center">
  <h5 class="col-md-2 bg-light">注文履歴一覧</h3>
</div>
<div class="row">
  <div class="col-md-10">
    <table class="table table-hover">
      <thead class="bg-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
            <!--購入日時-->
          <td><%= link_to l order.created_at, admin_order_path(order) %></td>
            <!--購入者名-->
            <!--customer.name = #{first_name} + #{last_name} となるようにCustomerモデルに記載する-->
          <td><%= order.customer.full_name %></td>
            <!--注文個数-->
          <td><%= order.order_items.sum(:count) %></td>
            <!--注文ステータス-->
          <td><%= order.status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <%= paginate @orders %>
  </div>
</div>