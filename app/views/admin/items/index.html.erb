<h3>商品一覧</h3>
<div class="row">
  <div class="col-10 mx-auto">
    <%= link_to '＋', new_admin_item_path %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%=link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.item_genre.name %></td>

            <td>
              <% if item.status == "販売中" %>
                <b class="text-success"><%= item.status %></b>
              <% else %>
                <b class="text-secondary"><%= item.status %></b>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <div>
      <%= paginate @items %>
    </div>
  </div>
</div>
