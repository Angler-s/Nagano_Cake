<!--ransackのヘルパー-->
<%# search_form_for @q, url: admin_searchs_path do |f| %>
  <%# f.search_field :name_cont %>

<h5 class="bg-light col-4 text-center px-0">商品一覧</h5>
<div class="row">
  <div class="col-9 mx-auto">
    <h3 class="text-right"><%= link_to new_admin_item_path do %><span class="new"><i class="fa-light fa-plus"></i></span><% end %></h3>
    <table class="table table-borderless">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%=link_to item.name, admin_item_path(item) %></td>
            <td>¥<%= item.price.to_s(:delimited) %></td>
            <td><%= item.item_genre.name %></td>

            <td>
              <% if item.status == "販売中" %>
                <b class="text-success"><%= item.status %></b>
              <% else %>
                <b class="text-secondary"><%= item.status %></b>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row" >
      <div class="mx-auto">
        <%= paginate @items, theme: 'bootstrap-5', class: "col-md-9"  %>
      </div>
    </div>
  </div>
</div>
