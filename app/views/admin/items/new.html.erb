<h3>商品新規登録</h3>

<div class="row">
  <div class="col-5">
  
    <%= form_with model: [:admin, @item], local:true do |f| %>
      <div class="form-group">
      <%= f.label :image, '商品画像' %>
      <%= f.file_field :item_image, class: "form-control-file", accept: 'image/*' %>
      </div>
      
      <div class="form-group">
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, placeholder: "商品名" %>
      </div>
      
    
      <div class="form-group">
      <%= f.label :introduction, '商品説明' %>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
      </div>
      
      <div class="form-group">
      <%= f.label :genre_id, 'ジャンル' %>
      <%= f.select :genre_id, [['ケーキ', 1], ['プリン', 2], ['焼き菓子', 2], ['キャンディ', 4]], { include_blank: "--選択してください--"}, {} %>
      </div>
      
      <div class="form-group">
      <%= f.label :price, '販売価格' %>
      <%= f.text_field :price, placeholder: "1000" %>円
      </div>
      
      <div class="form-group">
      <%= f.label :is_availabled, '販売ステータス' %>
        <%= f.radio_button :is_availabled, true, checked: true %>
        <%= f.label :is_availabled, '販売中', value: true %>
        <%= f.radio_button :is_availabled, false %>
        <%= f.label :is_availabled, '販売中', value: false %>
      </div>
      
      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    
    <% end %>
  </div>
</div>