<div class="row">
  <h3>商品詳細</h3>
</div>
<div class="row">
  <div class="col-4">
  <%= @item.name %>
  <div><%= image_tag @item.get_item_image(200, 200) %></div>
  </div>
  <div class="col-4">
    <table class="mb-3">
      <Thead>
        <tr>
          <th style="width: 30%"></th>
          <th style="width: 40%"></th>
        </tr>
      </Thead>
      <tbody>
        <tr>
          <td>商品名</td><td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td><td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td><td><%= @item.item_genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td><td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td><td><%= @item.status %></td>
        </tr>
      </tbody>
    </table>
    
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>

  </div>
</div>
</div>