<div class="row">
  <h5 class="bg-light col-1 text-center px-0">商品詳細</h5>
</div>
<div class="row">
  <div class="col-4">

  <div class="my-4"><%= image_tag @item.get_item_image(300, 200) %></div>
  </div>
  <div class="col-8">
    <table class="table table-borderless mb-3">
      <Thead>
        <tr>
          <th style="width: 25%"></th>
          <th style="width: 75%"></th>
        </tr>
      </Thead>
      <tbody>
        <tr class="m-2">
          <td>商品名</td><td><%= @item.name %></td>
        </tr>
        <tr class="m-2">
          <td>商品説明</td><td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td><td><%= @item.item_genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td><td class="align-middle">¥<%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.status == "販売中" %>
              <b class="text-success"><%= @item.status %></b>
            <% else %>
              <b class="text-secondary"><%= @item.status %></b>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

  <div class="text-center"><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success align-center px-4 py-2" %></div>




