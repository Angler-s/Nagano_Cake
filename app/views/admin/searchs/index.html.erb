

<h1>検索結果</h1>

<table>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%=link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.item_genre.name %></td>

      <td>
        <% if item.status == "販売中" %>
          <b class="text-success"><%= item.status %></b>
        <% else %>
          <b class="text-secondary"><%= item.status %></b>
        <% end %>
      </td>

    </tr>
  <% end %>
</table>