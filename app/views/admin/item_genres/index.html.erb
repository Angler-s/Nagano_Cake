<div class="container">
  <div class="row">
    <div class="col">
      <h4>ジャンル一覧・追加</h4>
      
      　<%= form_with model: @item_genre do |f| %>
          <div class="form">
            <p><b>ジャンル名</b></p>
            <%= f.text_field :name %>
            <%= f.submit '新規登録', placeholder: "ジャンル名", class:"btn btn-success" %>
          </div>
        <% end %>
        
        <table class="table">
          <thead class="thead-light">
            <tr>
            <th><b>ジャンル</b></th>
          </tr>
          </thead>
          <tr>
            <%= @item_genres.each do |genre| %>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", path(genre.id), class:"btn btn-success" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>