<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container header-nav-box">
      <%= link_to root_path do %>
        <div class="svg_wrapper">
          <%= embedded_svg('nagano_nav.svg', class: 'nagano_svg') %>
        </div>
      <% end %>
      <div>
        <ul class="ml-auto mb-0">
          <div class="navbar-nav ml-auto">
            <div class="d-flex align-items-center">
              <% if customer_signed_in? %>
                <p class="mb-0 text-light font-weight-bold">ようこそ、<%= current_customer.last_name %>さん！</p>
              <% end %>
            </div>
            <div>
              <div class="navbar-nav">
                <% if admin_signed_in? %>
                  <li><%= link_to "商品一覧", admin_items_path, class: 'btn navbar-btn btn-outline-light' %></li>
                  <li><%= link_to "会員一覧", admin_customers_path, class: 'btn navbar-btn btn-outline-light ml-3'%></li>
                  <li><%= link_to "注文履歴一覧", admin_path, class: 'btn navbar-btn btn-outline-light ml-3'%></li>
                  <li><%= link_to "ジャンル一覧", admin_item_genres_path, class: 'btn navbar-btn btn-outline-light ml-3'%></li>
                  <li>
                    <%= link_to destroy_admin_session_path, method: :delete, class: 'btn navbar-btn btn-outline-light ml-3' do %>
                      ログアウト
                    <% end %>
                  </li>
                <% elsif customer_signed_in? %>
                  <li><%= link_to "マイページ", customers_path, class: 'btn navbar-btn btn-outline-light ml-5' %></li>
                  <li><%= link_to "商品一覧", items_path, class: 'btn navbar-btn btn-outline-light ml-3' %></li>
                  <li><%= link_to "カート", cart_items_path, class: 'btn navbar-btn btn-outline-light ml-3' %></li>
                  <li>
                    <%= link_to destroy_customer_session_path, method: :delete, class: 'btn navbar-btn btn-outline-light ml-3' do %>
                      ログアウト
                    <% end %>
                  </li>
                <% else %>
                  <li><%= link_to "About", about_path, class: 'btn navbar-btn btn-outline-light' %></li>
                  <li><%= link_to "商品一覧", items_path, class: 'btn navbar-btn btn-outline-light ml-3' %></li>
                  <li><%= link_to "新規登録",new_customer_registration_path , class: 'btn navbar-btn btn-outline-light ml-3' %></li>
                  <li><%= link_to "ログイン", new_customer_session_path , class: 'btn navbar-btn btn-outline-light ml-3' %></li>
                  <li><%= link_to "管理者ログイン（デバッグ用）", new_admin_session_path, class: 'nav-link text-danger ml-3' %></li>
                <% end %>
              </div>
              <div class="float-right mt-2">
                <% if admin_signed_in? %>
                  <%= render 'admin/searchs/search_form' %>
                <% else %>
                  <%= render 'public/items/search_form', q: @q %>
                <% end %>
              </div>
            </div>
          </div>
        </ul>
      </div>
    </div>
  </nav>
</header>
