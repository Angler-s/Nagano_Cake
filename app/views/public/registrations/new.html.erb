<h2>新規会員登録</h2>
<%= render "public/shared/error_messages", resource: resource %>
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <table class="table table-borderless mt-3">
    <tr>
      <td>名前</td>
      <td>(姓)</td>
      <td>
        <%= f.text_field :last_name, class: "form-control" %>
      </td>
      <td>(名)</td>
      <td class="field">
        <%= f.text_field :first_name, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td>
      <td class="field">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </td>
      <td>(メイ)</td>
      <td class="field">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <td colspan="2">メールアドレス</td>
      <td class="field">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <td colspan="2">郵便番号(ハイフンなし)</td>
      <td class="field">
        <%= f.text_field :postal_code, class: "form-control" %>
      </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <td colspan="2">住所</td>
      <td colspan="3 field">
        <%= f.text_field :address, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <td colspan="2">電話番号(ハイフンなし)</td>
      <td class="field">
        <%= f.text_field :phone_number, class: "form-control" %>
      </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <td colspan="2">パスワード(6文字以上)</td>
      <td class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <td colspan="2">パスワード(確認用)</td>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <td colspan="2"></td>
      <td>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </td>
      <td colspan="2"></td>
    </tr>
  </table>
  <div>
    <h2>既に登録済みの方</h2>
    <div>
      <%= link_to "こちら", new_customer_session_path %>
      <span>　からログインしてください。</span>
    </div>
  </div>
<% end %>
