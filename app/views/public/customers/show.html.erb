<h2>マイページ</h2>
<h2>登録情報</h2>
<%= link_to "編集する", public_customers_information_edit_path, class:"btn btn-success btn-md" %>
<table class="table table-bordered mt-3">
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %>  <%=@customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana %>  <%=@customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>

<h2>配送先一覧</h2>
<%= link_to "一覧を見る", destinations_path(current_customer), class:"btn btn-primary btn-md" %>

<h2>注文履歴</h2>
<%= link_to "一覧を見る", orders_path(current_customer), class:"btn btn-primary brn-md" %>