<h2>注文情報確認</h2>
<div class="row">
  <div class="col-md-10">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.item_image, size: '60x40', class:"mx-2" %>
                <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.count %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <table>
      <tr>
        <td>送料</td>
        <td><%= @order.delivery_fee %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= @total_price %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= @order.amount_billed %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <h3>支払方法</h3>
    <div>
      <%= @order.payment_i18n %>
    </div>
    <h3>お届け先</h3>
    <div>
      <%= @order.postal_code + @order.address + @order.name %>
    </div>
  </div>
  <div class="row">
    <%= link_to "注文を確認する",
  </div>
</div>