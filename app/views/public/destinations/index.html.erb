<div class="row">
  <div class="mt-3 col-md-8">
    <h3 class="d-inline  mx-auto highlight">配送先登録/一覧</h3>
    <%= form_with model: @destination do |f| %>
    <div>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフン無し)" %></td>
          <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td colspan=2><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "宛先" %></td>
          <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
    <% end %>
    <div class="mt-5">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan=3></th>
          </tr>
        </thead>
        <tbody>
          <% @destinations.each do |destination| %>
            <tr>
              <td><%= destination.postal_code %></td>
              <td><%= destination.address %></td>
              <td><%= destination.name %></td>
              <td class="text-center">
                <%= link_to "編集する", edit_destination_path(destination), class: "btn btn-success" %>
                <%= link_to "削除する", destination_path(destination), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
