<div class="col-md-2 my-5">
  <table class="table table-bordered table_border_radius my-4 item_genres_search_box">
    <div class=" item_genres_search_img "></div>
    <thead class="table">
      <tr><th class="text-center">ジャンル検索</th></tr>
    </thead>
    <tbody class="table table-borderless">
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, item_genre_path(genre), class:"btn btn-block cake-btn text-truncate", style:"width: 130px;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>